<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{project.name}} :: {{project.description}}</title>
        <!-- jquery -->
        <script src="assets/jquery/jquery-1.9.1.min.js"></script>

        <!-- bootstrap -->
        <link href="assets/bootstrap/css/bootstrap.css" rel="stylesheet">
        <link href="assets/bootstrap/css/bootstrap-responsive.css" rel="stylesheet">  
        <script src="assets/bootstrap/js/bootstrap.js"></script>

        <!-- prettify -->  
        <link rel="stylesheet" href="assets/prettify/prettify-bootstrap.css">    
        <script src="assets/prettify/prettify.js"></script> 

        <!-- in docs page include bootstrap-editable for creating new record example -->
        {{#if_eq page "docs"}}
            <!-- mockjax -->
            <script src="assets/mockjax/jquery.mockjax.js"></script>
            
            <link href="assets/x-editable/bootstrap-editable/css/bootstrap-editable.css" rel="stylesheet">
            <script src="assets/x-editable/bootstrap-editable/js/bootstrap-editable.js"></script>
    <!--        <script src="assets/x-editable/bootstrap-editable/js/bootstrap-editable.min.js"></script>-->
        {{/if_eq}}
        
        <!-- main css -->  
        <link rel="stylesheet" href="assets/main.css">     
    </head>
    <body>
        
        {{>navbar}}
        
        {{#if_eq page "docs"}}
            {{>subnavbar}}
        {{/if_eq}}

        <div class="container">
        
            {{>layout_content}}
            
            <footer class="footer">
            <hr>
                <p><a href="http://vitalets.github.com/x-editable">X-editable</a> &copy; Vitaliy Potapov 2012. Released under the MIT license.</p> 
            </footer>
        </div> <!--/container-->
        
        {{>metrika}}
        
        <!-- main.js -->
        <script src="assets/main.js"></script>
    </body>
</html>
